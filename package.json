{
  "name": "torrents-stream-server",
  "version": "1.3.0",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node lib/index.js",
    "dev": "NODE_ENV=development nodemon --watch 'src/**/*' -e 'mustache,ts,json,xml,yaml' --exec 'ts-node' src/index.ts",
    "build-swagger": "npm run build-swagger-frontend && npm run build-swagger-backend",
    "build-swagger-frontend": "openapi-generator-cli generate -i src/swagger.yaml -g typescript-fetch -o frontend/src/helpers/client",
    "build-swagger-backend": "cp frontend/src/helpers/client/models/* src/models && find src/models -name '*.ts' -print0 | xargs -0 sed -i 's/..\\/runtime/..\\/helpers/g'",
    "prettify": "prettier --write \"{src,frontend/src}/**/*.{js,ts,tsx,json,css,scss}\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "check-disk-space": "^2.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-winston": "^4.0.5",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mime-types": "^2.1.27",
    "mustache": "^4.0.1",
    "mustache-express": "^1.3.0",
    "node-fetch": "^2.6.1",
    "nyaapi": "^2.3.3",
    "parse-torrent": "^7.1.3",
    "prettier": "^2.1.2",
    "pump": "^3.0.0",
    "range-parser": "^1.2.1",
    "swagger-ui-express": "^4.1.4",
    "timeago.js": "^4.0.2",
    "torrent-stream": "^1.2.0",
    "trammel": "^4.0.0",
    "winston": "^3.3.3",
    "winston-loggly-bulk": "^3.1.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.0.3",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/express-winston": "^4.0.0",
    "@types/http-errors": "^1.8.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mime-types": "^2.1.0",
    "@types/mustache-express": "^1.2.1",
    "@types/node-fetch": "^2.5.7",
    "@types/parse-torrent": "^5.8.3",
    "@types/pump": "^1.1.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/torrent-stream": "0.0.5",
    "@types/yamljs": "^0.2.31",
    "@types/nyaapi": "^2.3.0",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": "12.x"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "arrowParens": "always",
    "proseWrap": "always"
  }
}
